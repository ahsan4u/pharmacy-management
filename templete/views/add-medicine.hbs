{{>top}}
    <link rel="stylesheet" href="/stylesheet/add-medicine.css">
    <style>.navbar ul a[href="/add-medicine"] { background-color: #292e2d; box-shadow: inset 0 0 15px black; }</style>
</head>
<body>
    {{>navbar}}
    <div class="container">
        <div class="videoTemp">
            <video src="/img/add-med1.mp4" muted autoplay></video>
        </div>
        <div class="content">
            <h1>Add New Medicine</h1>
            <form action="/add-medicine" method="POST">
                <input type="text" name="name" id="name" placeholder="Name..." autocomplete="off">
                <input type="text" name="formula" id="formula" placeholder="Formula..." autocomplete="off">
                <div class="priceQty">
                    <input type="text" name="price" id="price" placeholder="Price..." autocomplete="off">
                    <input type="text" name="qty" id="qty" placeholder="Quantity..." autocomplete="off">
                </div>
                <div class="expDate">
                    <label for="expDate">Exp Date: <input type="date" name="expDate" id="expDate"></label>
                </div>
                <div class="buttons">
                    <input type="submit" value="Submit">
                </div>
                <p class="msg">{{msg}}<span>{{err}}</span></p>
            </form>
        </div>
    </div>
    <script src="/scripts/add-medicines.js"></script>
</body>
</html>